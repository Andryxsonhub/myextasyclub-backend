generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int       @id @default(autoincrement())
  email                   String    @unique
  name                    String    @unique
  password                String
  bio                     String?
  profile_picture_url     String?   @map("profile_picture_url")
  interests               String?
  desires                 String?
  fetishes                String?
  
  // A LINHA QUE ESTAVA FALTANDO FOI ADICIONADA DE VOLTA AQUI
  location                String?

  favorited_suggestions   String?   @map("favorited_suggestions")
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  gender                  String?
  lastSeenAt              DateTime? @map("last_seen_at")
  certificationLevel      Int       @default(0) @map("certification_level")
  posts                   Post[]
}

model Post {
  id          Int      @id @default(autoincrement())
  content     String
  mediaUrl    String?  @map("media_url")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int      @map("author_id")
}